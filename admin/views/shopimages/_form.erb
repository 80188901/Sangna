<% error = @shopimage.errors.include?(:shop_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :shop_id, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :shop_id, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:shop_id) : "Ex: a simple text" %></span>
  </div>
</fieldset>
